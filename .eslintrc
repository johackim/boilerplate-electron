{
    "extends": [ "airbnb" ],
    "parser": "babel-eslint",
    "rules": {
        "indent": [2, 4, {"SwitchCase": 1}],
        "react/jsx-indent": ["error", 4],
        "react/jsx-indent-props": [2, 4],
        "react/jsx-filename-extension": ["warn", { "extensions": [".js", ".jsx"] }],
        "max-len": [2, {"code": 200, "tabWidth": 4, "ignoreUrls": true}],
        "import/extensions": ["off", "never"],
    },
    "globals": {
        "document",
        "assert",
    },
    "env": {
        "mocha": true,
        "browser": true,
    }
}
