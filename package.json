{
  "name": "boilerplate-electron",
  "author": "ston3o",
  "description": "My personal electron boilerplate",
  "version": "0.1.0",
  "main": "index.js",
  "scripts": {
    "start": "npm-run-all --parallel watch:client watch:server",
    "watch": "webpack --watch -d",
    "watch:client": "webpack --watch -d",
    "watch:server": "NODE_ENV=development electron -r babel-register src/server/index.js",
    "build": "npm run build:client && npm run build:server && npm run pkg",
    "build:client": "webpack -p --progress --colors",
    "build:server": "NODE_ENV=production babel --minified --no-comments --compact true -d public/ src/server",
    "pkg": "cp package.json public/ && npm install --production --prefix public/ && electron-packager --platform=all --out dist/ --overwrite public",
    "test": "mocha --require babel-core/register --require babel-polyfill --require chai/register-assert test/*.spec.js"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-eslint": "^8.2.6",
    "babel-loader": "^7.1.5",
    "babel-plugin-import": "^1.8.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-es2017": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "babel-register": "^6.26.0",
    "chai": "^4.1.2",
    "css-loader": "^1.0.0",
    "electron": "^2.0.6",
    "electron-packager": "^12.1.0",
    "eslint": "^5.2.0",
    "eslint-config-airbnb": "^17.0.0",
    "eslint-plugin-import": "^2.13.0",
    "eslint-plugin-jsx-a11y": "^6.1.1",
    "eslint-plugin-react": "^7.10.0",
    "extract-text-webpack-plugin": "^4.0.0-beta.0",
    "file-loader": "^1.1.11",
    "html-loader": "^0.5.5",
    "html-webpack-plugin": "^3.2.0",
    "less": "^3.8.0",
    "less-loader": "^4.1.0",
    "mocha": "^5.2.0",
    "node-sass": "^4.9.2",
    "npm-run-all": "^4.1.3",
    "prettier": "^1.14.0",
    "sass-loader": "^7.1.0",
    "style-loader": "^0.21.0",
    "url-loader": "^1.0.1",
    "webpack": "^4.16.3",
    "webpack-cli": "^3.1.0",
    "webpack-livereload-plugin": "^2.1.1"
  },
  "dependencies": {
    "animate.css": "^3.7.0",
    "babel-polyfill": "^6.26.0",
    "body-parser": "^1.18.3",
    "compression": "^1.7.3",
    "cors": "^2.8.4",
    "debug": "^3.1.0",
    "express": "^4.16.3",
    "react": "^16.4.2",
    "react-addons-css-transition-group": "^15.6.2",
    "react-dom": "^16.4.2",
    "react-redux": "^5.0.7",
    "redux": "^4.0.0",
    "redux-thunk": "^2.3.0",
    "request": "^2.87.0",
    "whatwg-fetch": "^2.0.4"
  }
}
